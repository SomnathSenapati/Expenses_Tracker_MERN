<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Education List</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Education</h1>
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <a href="/education/add" class="btn btn-success">Add Education</a>
              </div>

              <% if (!data || data.length === 0) { %>
                <p class="text-center text-danger mt-3">No education data found</p>
              <% } else { %>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Degree</th>
                          <th>School</th>
                          <th>Location</th>
                          <th>Start Date</th>
                          <th>End Date</th>
                          <th>Grade</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach((item, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= item.degree %></td>
                            <td><%= item.school %></td>
                            <td><%= item.location || "N/A" %></td>
                            <td><%= item.startDate ? new Date(item.startDate).toLocaleDateString() : "N/A" %></td>
                            <td>
                              <%= item.endDate ? new Date(item.endDate).toLocaleDateString() : "Ongoing" %>
                            </td>
                            <td><%= item.grade || "N/A" %></td>
                            <td>
                              <a href="/education/edit/<%= item._id %>" class="btn btn-success btn-sm">Edit</a>
                              <a href="/education/delete/<%= item._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
  </body>
</html>

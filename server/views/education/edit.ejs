<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Education</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Edit Education</h1>
            <div class="card shadow mb-4">
              <div class="card-body">
                <form action="/education/update/<%= data._id %>" method="POST">
                  
                  <div class="form-group">
                    <label>School / University</label>
                    <input type="text" name="school" class="form-control" value="<%= data.school %>" required />
                  </div>

                  <div class="form-group">
                    <label>Degree</label>
                    <input type="text" name="degree" class="form-control" value="<%= data.degree %>" required />
                  </div>

                  <div class="form-group">
                    <label>Location</label>
                    <input type="text" name="location" class="form-control" value="<%= data.location || '' %>" />
                  </div>

                  <div class="form-group">
                    <label>Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="<%= data.startDate ? data.startDate.toISOString().split('T')[0] : '' %>" required />
                  </div>

                  <div class="form-group">
                    <label>End Date</label>
                    <input type="date" name="endDate" class="form-control" value="<%= data.endDate ? data.endDate.toISOString().split('T')[0] : '' %>" />
                    <small class="form-text text-muted">Leave blank if ongoing</small>
                  </div>

                  <div class="form-group">
                    <label>Grade</label>
                    <input type="text" name="grade" class="form-control" value="<%= data.grade || '' %>" placeholder="e.g. 8.5 CGPA or 75%" />
                  </div>

                  <button type="submit" class="btn btn-primary">Update</button>
                  <a href="/education/list" class="btn btn-secondary">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>

        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
  </body>
</html>

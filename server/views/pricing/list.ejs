<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Project List</title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
  </head>
  <body id="page-top">
    <div id="wrapper">
      <%- include('../layout/sideber.ejs') %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%- include('../layout/navber.ejs') %>

          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800">Projects</h1>
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <a href="/project/add" class="btn btn-success">Add Project</a>
              </div>

              <% if (!data || data.length === 0) { %>
                <p class="text-center text-danger mt-3">No project data found</p>
              <% } else { %>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Title</th>
                          <th>Description</th>
                          <th>Technologies</th>
                          <th>Live URL</th>
                          <th>GitHub</th>
                          <th>Image</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.forEach((item, index) => { %>
                          <tr>
                            <td><%= index + 1 %></td>
                            <td><%= item.title %></td>
                            <td><%= item.description %></td>
                            <td>
                              <% if (item.technologies && item.technologies.length > 0) { %>
                                <%= item.technologies.join(', ') %>
                              <% } else { %>
                                N/A
                              <% } %>
                            </td>
                            <td>
                              <% if (item.liveUrl) { %>
                                <a href="<%= item.liveUrl %>" target="_blank">Live</a>
                              <% } else { %>
                                N/A
                              <% } %>
                            </td>
                            <td>
                              <% if (item.githubUrl) { %>
                                <a href="<%= item.githubUrl %>" target="{item.githubUrl}">GitHub</a>
                              <% } else { %>
                                N/A
                              <% } %>
                            </td>
                            <td>
                              <% if (item.image) { %>
                                <img src="/<%= item.image %>" alt="Project Image" width="60" />
                              <% } else { %>
                                N/A
                              <% } %>
                            </td>
                            <td>
                              <a href="/project/edit/<%= item._id %>" class="btn btn-success btn-sm">Edit</a>
                              <a href="/project/delete/<%= item._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        <%- include('../layout/footer.ejs') %>
      </div>
    </div>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
  </body>
</html>

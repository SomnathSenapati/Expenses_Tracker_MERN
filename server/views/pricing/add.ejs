<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Pricing Plan</title>
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <link href="/css/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body id="page-top">
  <div id="wrapper">
    <%- include('../layout/sideber.ejs') %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <%- include('../layout/navber.ejs') %>

        <div class="container-fluid">
          <h1 class="h3 mb-4 text-gray-800">Add Pricing Plan</h1>

          <div class="card shadow mb-4">
            <div class="card-body">
              <% if (typeof errorMessage !== 'undefined') { %>
                <div class="alert alert-danger"><%= errorMessage %></div>
              <% } %>

              <form action="/pricing/add" method="POST">
                <!-- Name -->
                <div class="form-group">
                  <label>Plan Name <span class="text-danger">*</span></label>
                  <input type="text" name="name" class="form-control" required placeholder="e.g. Basic, Pro, Enterprise" />
                </div>

                <!-- Price -->
                <div class="form-group">
                  <label>Price <span class="text-danger">*</span></label>
                  <input type="text" name="price" class="form-control" required placeholder="e.g. â‚¹499, $49" />
                </div>

                <!-- Features -->
                <div class="form-group">
                  <label>Features (comma-separated) <span class="text-danger">*</span></label>
                  <input type="text" name="features" class="form-control" required placeholder="e.g. 10 Projects, Email Support, Dashboard Access" />
                </div>

                <!-- Button Text -->
                <div class="form-group">
                  <label>Button Text</label>
                  <input type="text" name="button" class="form-control" placeholder="e.g. Subscribe" />
                </div>

                <!-- Popular -->
                <div class="form-group form-check">
                  <input type="checkbox" class="form-check-input" id="popular" name="popular" />
                  <label class="form-check-label" for="popular">Mark as Popular Plan</label>
                </div>

                <!-- Active Status -->
                <!-- <div class="form-group form-check">
                  <input type="checkbox" class="form-check-input" id="isActive" name="isActive" checked />
                  <label class="form-check-label" for="isActive">Is Active</label>
                </div> -->

                <!-- Submit Buttons -->
                <button type="submit" class="btn btn-primary">Add Pricing Plan</button>
                <a href="/pricing/list" class="btn btn-secondary">Cancel</a>
              </form>
            </div>
          </div>
        </div>
      </div>

      <%- include('../layout/footer.ejs') %>
    </div>
  </div>

  <!-- JS Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="/js/sb-admin-2.min.js"></script>
</body>
</html>
